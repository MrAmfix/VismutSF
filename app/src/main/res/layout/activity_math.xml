        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="20sp"
        android:layout_centerHorizontal="true"
        android:text="VismutMath">
    </TextView>

    <ScrollView
        android:layout_width="match_parent"
        android:id="@+id/scrooltwo"
